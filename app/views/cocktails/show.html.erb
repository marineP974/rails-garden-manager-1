<div class="container1">
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
    <h1>   <%= @cocktail.name.capitalize%> </h1>
  </div>
<br>
  <h3>Recipe:</h3>

  <div class="container d-flex justify-content mt-3 mb-4">
    <div class="cards">
      <ul class="list-group list-group-flush">
        <% @cocktail.doses.each_with_index do |dose, index| %>
        <div class="card-category-show">
        <li class="bullet-none"> <%= index +1 %>. <%= dose.description %> of <%= dose.ingredient.name %> </li>
          <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fa fa-trash destroy_dose ml-2" style="color:#000000a6; font-size: 17px;"></i>
          <% end %>
      </ul>
        <% end %>
        </div>
    </div>
  </div>

  <div class= "container1">
    <%= link_to "add ingredients", new_cocktail_dose_path(@cocktail), class:"btn-add" %>
    <%= link_to "Not a good one!", cocktail_path(@cocktail),
        class:"btn-add",
        method: :delete,
        data: {:confirm => "are you sure ?? " }  %>
    <%= link_to "Back", cocktails_path, class:"btn-add" %>
  </div>
</div>



